takeLeft : Int -> String -> String
takeLeft n string =
  if n < 1 then
    ""
  else
    slice 0 n string


dropLeft : Int -> String -> String
dropLeft n string =
  if n < 1 then
    string
  else
    slice n (length string) string


takeRight : Int -> String -> String
takeRight n string =
  if n < 1 then
    ""
  else
    slice (0 - n) (length string) string


dropRight : Int -> String -> String
dropRight n string =
  if n < 1 then
    string
  else
    slice 0 (0 - n) string


